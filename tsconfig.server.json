{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "."
  },
  "include": [
    "server/**/*",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}